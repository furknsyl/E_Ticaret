@model IEnumerable<Khareedo.Models.Wishlist>
@{
    ViewBag.Title = "Wishlist";
}

 <!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/Content/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>ISTEK LISTESI</h2>
                <ol class="breadcrumb">
                    <li><a href="/Home/Index">Ana Sayfa</a></li>
                    <li class="active">Istek Listesi</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- Cart view section -->
<section id="cart-view">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cart-view-area">
                    <div class="cart-view-table aa-wishlist-table">
                        <form action="">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Ürün</th>
                                            <th>Ücret</th>
                                            <th>Stok Durumu</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Session["username"]!=null)
                                        {                              
                                            foreach (var item in Model)
                                            {                                   
                                        
                                            <tr>
                                                <td><a class="remove" href="@Url.Action("Remove", "WishList", new { id=item.WishlistID})"><fa class="fa fa-close"></fa></a></td>
                                                <td><a href="#"><img src="@item.Product.ImageURL" alt="@item.Product.AltText"></a></td>
                                                <td><a class="aa-cart-title" href="#">@item.Product.Name</a></td>
                                                <td>@item.Product.UnitPrice</td>
                                                <td>
                                                    @if (item.Product.UnitInStock > 0)
                                                    {
                                                        <text>Stokta (@item.Product.UnitInStock)</text>
                                                    }
                                                    else
                                                    { <text>Stokta Yok (@item.Product.UnitInStock)</text>}
                                                </td>
                                                <td><a href="@Url.Action("AddToCart", "WishList", new { id=item.WishlistID})" class="aa-add-to-cart-btn">Sepete Ekle</a></td>
                                            </tr>                                       
                                            }
                                        }
                                        else
                                        {
                                            <text>Istek Listesine Görüntülemek için Giriş Yapınz.</text> 
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->


