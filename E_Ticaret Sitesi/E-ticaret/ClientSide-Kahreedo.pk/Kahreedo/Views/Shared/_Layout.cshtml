<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Soylu Ticaret| @ViewBag.Title</title>

    @Styles.Render("~/Content/css")

    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <script src="~/Content/js/jquery.min.js"></script>

    

    <link href="~/Content/Intellisence/css/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Content/Intellisence/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Intellisence/js/jquery-ui.min.js"></script>


    <script type="text/javascript">
        $(function () {
            $("#searchTxtBox").autocomplete({
                source: '@Url.Action("GetProducts","Product")'
            });
        });
    </script>

</head>
<body>
    
    <div id="wpf-loader-two">
        <div class="wpf-loader-two-inner">
            <span>Yükleniyor</span>
        </div>
    </div>
    
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>
    
    <header id="aa-header">
        
        <div class="aa-header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-top-area">
                            
                            <div class="aa-header-top-left">
                                
                                <div class="aa-language">
                                    <div class="dropdown">
                                        <a class="btn dropdown-toggle" href="#" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <img src="~/Content/img/flag/turkbayragi.png" alt="turkish  flag">Türkçe
                                            
                                        </a>
                                        
                                    </div>
                                </div>
                                
                                <div class="aa-currency">
                                    <div class="dropdown">
                                        <a class="btn dropdown-toggle" href="#" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <i class="fa fa-money"></i>TRY
                                           
                                        </a>
                                       
                                    </div>
                                </div>
                                
                                <div class="cellphone hidden-xs">
                                    <p><span class="fa fa-phone"></span>8505555</p>
                                </div>
                                
                            </div>
                            
                            <div class="aa-header-top-right">
                                <ul class="aa-head-top-nav-right">

                                    <li><a href="@(Session["username"] != null ? Url.Action("Index", "Account") : Url.Action("Login", "Account"))">Hesabım</a></li>
                                    <li class="hidden-xs"><a href="@(Session["username"] != null ? Url.Action("Index", "WishList") : Url.Action("Login", "Account"))">İstek Listesi @if (@ViewBag.WlItemsNo > 0)
                                    {<text>(@ViewBag.WlItemsNo)</text>}</a></li>
                                    <li class="hidden-xs"><a href="@(Session["username"] != null ? Url.Action("Index", "MyCart") : Url.Action("Login", "Account"))">Sepetim @if (@ViewBag.NoOfItem > 0)
                                    {<text>(@ViewBag.NoOfItem)</text>}</a></li>
                                    <li class="hidden-xs"><a href="@(Session["username"] != null ? Url.Action("Index", "CheckOut") : Url.Action("Login", "Account"))">Ödeme</a></li>
                                    @if (Session["username"] == null)
                                    {

                                        <li>@Html.ActionLink("Giriş Yap", "Login", "Account")</li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("Logout","Account")">Çıkış Yap</a></li>
                                        <li><a href="">@Session["username"]</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="aa-header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            
                            <div class="aa-logo">
                                
                                <a href="@Url.Action("Index","Home")">
                                    <span class="fa fa-shopping-cart"></span>
                                    <p>SOYLU<strong>TİCARET</strong> <span>Alışveriş Partneriniz</span></p>
                                </a>
                                
                            </div>
                            
                            <div class="aa-cartbox">
                                <a class="aa-cart-link" href="#">
                                    <span class="fa fa-shopping-basket"></span>
                                    <span class="aa-cart-title">Sepet</span>
                                    <span class="aa-cart-notify">@(ViewBag.NoOfItem==null ? 0 :ViewBag.NoOfItem)</span>
                                </a>
                                <div class="aa-cartbox-summary">
                                    <ul>
                                        @if (Session["username"] != null)
                                        {
                                            Html.RenderPartial("_CartBox");

                                        }
                                    </ul>
                                    <a class="aa-cartbox-checkout aa-primary-btn" href="@Url.Action("Index","CheckOut")">Ödeme</a>
                                </div>
                            </div>
                            
                            <div class="aa-search-box">
                                <form action="@Url.Action("Search","Product")" method="get">
                                    <input type="text" name="product" id="searchTxtBox" placeholder="Ürün Ara. . . ">
                                    <button type="submit"><span class="fa fa-search"></span></button>
                                </form>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </header>
    
    <section id="menu">
        <div class="container">
            <div class="menu-area">
                
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
                            <li><a href="@Url.Action("GetProductsByCategory","Product", new { categoryName = "Ütü" })">Ütü</a></li>
                            <li><a href="@Url.Action("GetProductsByCategory","Product", new { categoryName = "Kahve" })">Kahve</a></li>
                            <li><a href="@Url.Action("GetProductsByCategory","Product", new { categoryName = "Blender" })">Blender</a></li>
                            <li><a href="@Url.Action("GetProductsByCategory","Product", new { categoryName = "Mikrodalga Fırın" })">Mikrodalga Fırın</a></li>
                            <li><a href="@Url.Action("GetProductsByCategory","Product", new { categoryName = "Elektrikli Süpürge" })">Elektrikli Süpürge</a></li>
                            <li><a href="@Url.Action("GetProductsByCategory","Product", new { categoryName = "Tost Makinesi" })">Tost Makinesi</a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    

    @RenderBody()

    
    <section id="aa-subscribe">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="aa-subscribe-area">
                        <h3>Haberler </h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ex, velit!</p>
                        <form action="" class="aa-subscribe-form">
                            <input type="email" name="" id="" placeholder="Mailinizi Giriniz">
                            <input type="submit" value="Abone Ol">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- footer -->
    <footer id="aa-footer">
        
        <div class="aa-footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-top-area">
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <h3>Ana Menü</h3>
                                        <ul class="aa-footer-nav">
                                            <li><a href="#">Ana Sayfa</a></li>
                                            <li><a href="#">Servislerimiz</a></li>
                                            <li><a href="#">Ürünlerimiz</a></li>
                                            <li><a href="@Url.Action("Index","Hakkımızda")">Hakkımızda</a></li>
                                            <li><a href="#">İletişime Geç</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>Bilgiler</h3>
                                            <ul class="aa-footer-nav">
                                                <li><a href="#">Teslim</a></li>
                                                <li><a href="#">Geri Dönüşler</a></li>
                                                <li><a href="#">Servisler</a></li>
                                                <li><a href="#">İndirim</a></li>
                                                <li><a href="#">Özel Teklifler</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>Linkler</h3>
                                            <ul class="aa-footer-nav">
                                                <li><a href="#">Harita</a></li>
                                                <li><a href="#">Ara</a></li>
                                                <li><a href="#">Gelişmiş Arama</a></li>
                                                <li><a href="#">Tedarikçiler</a></li>
                                                <li><a href="#">FAQ</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>İletişime geç</h3>
                                            <address>
                                                <p>Beykoz/İstanbul</p>
                                                <p><span class="fa fa-phone"></span>850 000 0000</p>
                                                <p><span class="fa fa-envelope"></span>help@soyluticaret</p>
                                            </address>
                                            <div class="aa-footer-social">
                                                <a href="#"><span class="fa fa-facebook"></span></a>
                                                <a href="#"><span class="fa fa-twitter"></span></a>
                                                <a href="#"><span class="fa fa-google-plus"></span></a>
                                                <a href="#"><span class="fa fa-youtube"></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
        <div class="aa-footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-bottom-area">
                            <p>Designed by <a href="#">Furkan Soylu</a></p>
                            <div class="aa-footer-payment">
                                <span class="fa fa-cc-mastercard"></span>
                                <span class="fa fa-cc-visa"></span>
                                <span class="fa fa-paypal"></span>
                                <span class="fa fa-cc-discover"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- / footer -->

    @Scripts.Render("~/Content/js")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(function () {

            
            $('body').on('click', '.modal-link', function (e) {
                e.preventDefault();
                $(this).attr('data-target', '#login-modal');
                $(this).attr('data-toggle', 'modal');
            });

            
            $('body').on('click', '.modal-close-btn', function () {
                $('#login-modal').modal('hide');
            });

            
            $('#login-modal').on('hidden.bs.modal', function () {
                $(this).removeData('bs.modal');
            });

            $('#CancelModal').on('click', function () {
                return false;
            });
        });
    </script>



</body>
</html>